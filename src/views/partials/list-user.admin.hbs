<div class='h-100 align-middle'>
    <div class="input-group rounded search-product-admin w-25 mb-2">
        <input type="text" class="form-control  input-search" id="search" placeholder="Search">
        <span class="input-group-text border-0 cursor-pointer" id="search-addon">
            <i id="btn-search" class="fas fa-search"></i>
        </span>
    </div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>{{t 'history.id'}}</th>
                <th>{{t 'history.email'}}</th>
                <th>{{t 'history.name'}}</th>
                <th>{{t 'history.role'}}</th>
                <th>{{t 'history.phone'}}</th>
                <th>{{t 'history.action'}}</th>

            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="ms-3">
                            <p class="fw-bold mb-1">{{this.id}}</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{this.email}}</p>

                </td>
                <td>
                    <p class="fw-normal mb-1">{{this.name}}</p>

                </td>
                <td>
                    <p class="fw-normal mb-1">{{this.role}}</p>

                </td>
                <td><span class="upper-case">
                        {{this.phone}}
                    </span></td>
                <td>
                    <div class="dropend">
                        <a href="/admin/user/{{this.id}}">

                            <i class="fa-solid fa-search color-black"></i>
                        </a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>

    </table>
    <div class="mw-xl pagination mt-5">
        <nav aria-label="Page navigation example ">
            <div class="pagination" id="pagination">
                {{{pagination}}}
            </div>
        </nav>
    </div>
</div>


<script src="/js/utils.js"></script>
<script src="/js/admin/admin.invoice.js"></script>
<script src='/js/sweetalert.min.js'></script>
