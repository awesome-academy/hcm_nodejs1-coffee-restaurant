<div class="d-flex w-100 justify-content-between align-items-center">

    <div class="filter-range d-flex">
        <div>
            <p>Start</p>
            <input type="date" id="date-filter-start" name="trip-start" min=" 2021-01-01" max="2024-12-31">
        </div>
        <div class="pl-2">
            <p>End</p>
            <input type="date" id="date-filter-end" name="trip-end" min=" 2021-01-01" max="2024-12-31">
        </div>
    </div>

    <div class="d-flex align-items-center">
        <div class="d-flex  justify-content-start align-items-center h6  w-100">
            <label class="fs-small w-100" for="DESC">{{t 'admin.order-by'}}</label>
            <div class="w-100 d-flex align-items-center mr-2">
                <input type="radio" class="w-100 h-50" name="type" id="groupbymonth" value="month">
                <span class="fs-small ml-2 w-100 ml-2  " for="DESC">{{t 'admin.filter-month'}}</span>
            </div>
            <div class="w-100 ml-1rem">
                <select id="yearSelect" class="form-select form-select-sm ml-2" aria-label="Default select example">
                    {{#each listYear}}
                    <option selected value="{{this.Year}}">{{this.Year}}</option>
                    {{/each}}
                </select>
            </div>
            <span class="vertical-line"></span>
            <div class="w-100 d-flex align-items-center">
                <input type="radio" class="w-100 h-50" name="type" id="groupbyyear" value="year">
                <span class="fs-small w-100" for="ASC">{{t 'admin.filter-year'}}</span>
            </div>

        </div>
    </div>
</div>
<div class="row">

    <div class="col-4 ">
        <p class="fw-bold">{{t 'admin.quantity-invoices'}}</p>
        <p class="">{{data.totalOrder}}</p>
    </div>
    <div class="col-4 ">
        <p class="fw-bold">{{t 'admin.quantity-order-success'}}</p>
        <p class="">{{data.orderSuccess}}</p>
    </div>
    <div class="col-4 ">
        <p class="fw-bold">{{t 'admin.quantity-order-reject'}}</p>
        <p class="">{{data.orderReject}}</p>
    </div>

    <div class="col-4 ">
        <p class="fw-bold">{{t 'admin.revenue'}}</p>
        <p class="">{{data.totalRevenue}}</p>
    </div>
</div>

<div class="row">
    {{#each data.revenue}}
    <div class="col-4 ">
        <p>Th√°ng {{this.Month}}</p>
        <p class="">{{ this.TotalRevenue}}</p>
    </div>
    {{/each}}
</div>
<div>
    <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script src="/js/utils.js"></script>
<script src="/js/admin/dashboard.js"></script>
