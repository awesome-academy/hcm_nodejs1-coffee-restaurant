<div class='h-100 pt-history'>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>{{t 'history.id'}}</th>
                <th>{{t 'history.date'}}</th>
                <th>{{t 'history.total'}}</th>
                <th>{{t 'history.status'}}</th>
                <th>{{t 'history.method'}}</th>
                <th>{{t 'history.action'}}</th>

            </tr>
        </thead>
        <tbody>
            {{#each invoice}}
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="ms-3">
                            <p class="fw-bold mb-1">{{this.id}}</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{this.created_at}}</p>

                </td>
                <td>
                    <p class="fw-normal mb-1">{{this.total}}</p>

                </td>
                <td>
                <td>
                    {{#switch this.status}}
                    {{#case 'pending'}}
                    <button id="{{this.status}}" class="status-btn status-pending">{{this.status}}</button>
                    {{/case}}
                    {{#case 'shipping'}}
                    <button id="{{this.status}}" class="status-btn status-accepted">{{this.status}}</button>
                    {{/case}}
                    {{#case 'success'}}
                    <button id="{{this.status}}" class="status-btn status-delivered">{{this.status}}</button>
                    {{/case}}
                    {{#case 'reject'}}
                    <button id="{{this.status}}" class="status-btn status-rejected">{{this.status}}</button>
                    {{/case}}
                    {{#case 'cancel'}}
                    <button id="{{this.status}}" class="status-btn status-cancelled">{{this.status}}</button>
                    {{/case}}
                    {{/switch}}
                </td>

                </td>
                <td><span class="upper-case">
                        {{this.payment_method}}
                    </span></td>
                <td>
                    <a href="/order/history/{{this.id}}"><button type="button" class="btn btn-link btn-sm btn-rounded">
                            {{t 'history.detail'}}
                        </button>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/payment/payment.js"></script>
<script src='/js/sweetalert.min.js'></script>
