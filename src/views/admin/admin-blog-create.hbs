<div class="row w-100 py h-100 ">
    <div class="col-3">
        {{> sidebar.admin}}
    </div>

    <div class="col-9 mt-admin">
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">{{t 'blog.blog-detail'}}</div>
                <div class="card-body">
                    <!-- Form Group (username)-->
                    <div class="mb-3">
                        <label class="small mb-1" for="title">{{t 'blog.title'}}</label>
                        <input class="form-control" id="title" name="title" type="text"
                            placeholder="{{t 'blog.enter-title'}}" value="{{blog.title}}">
                        <div class="d-none text-danger" id="error-msg-name"></div>

                    </div>
                    <!-- Form Row-->
                    <div class="mb-3">
                        <label class="small mb-1 d-block" for="file">{{t 'blog.image'}}</label>
                        <input type="file" id="fileInputBlog" name="file" accept="image/*">
                        <div class="d-none text-danger" id="error-msg-email"></div>
                    </div>


                    <div class="mb-3">
                        <label class="small mb-1" for="description">{{t 'blog.description'}}</label>
                        <input class="form-control" id="description" name="description" type="text"
                            placeholder="{{t 'blog.enter-description'}}" value="{{blog.description}}">
                        <div class="d-none text-danger" id="error-msg-description"></div>
                    </div>
                    <div class="mb-3 ">
                        <div id="editor">
                            <div id="editor"></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" value="{{blog.id}}" id="btn-submit-blog">
                            {{t 'user.btn-savechange'}}</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="/js/utils.js"></script>
<script src="/js/ckeditor.js"></script>
<Script src="/js/admin/admin-blog.js"></Script>
